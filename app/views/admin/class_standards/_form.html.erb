<div class="px-6 py-6 sm:p-8">
  <%= form_with(model: [:admin, class_standard], local: true, id: "classStandardForm") do |form| %>
      <% if class_standard.errors.any? %>
      <div class="mb-6 rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              There <%= class_standard.errors.count == 1 ? 'is' : 'are' %> <%= pluralize(class_standard.errors.count, "error") %> with this class
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
            <% class_standard.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
            </div>
          </div>
        </div>
        </div>
      <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Form Section -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-4 py-5 border-b border-gray-200 bg-gray-50 sm:px-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-indigo-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                </svg>
                Class Information
              </div>
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              Provide the details for this class or subject.
            </p>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
              <div class="sm:col-span-1">
                <label for="class_standard_name" class="block text-sm font-medium text-gray-700">Class Name</label>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                    </svg>
                  </div>
                  <%= form.text_field :name, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md", placeholder: "e.g. Mathematics", required: true %>
                </div>
                <p class="mt-2 text-sm text-gray-500">Enter the full name of the class</p>
              </div>

              <div class="sm:col-span-1">
                <label for="class_standard_code" class="block text-sm font-medium text-gray-700">Class Code</label>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9.243 3.03a1 1 0 01.727 1.213L9.53 6h2.94l.56-2.243a1 1 0 111.94.486L14.53 6H17a1 1 0 110 2h-2.97l-1 4H15a1 1 0 110 2h-2.47l-.56 2.242a1 1 0 11-1.94-.485L10.47 14H7.53l-.56 2.242a1 1 0 11-1.94-.485L5.47 14H3a1 1 0 110-2h2.97l1-4H5a1 1 0 110-2h2.47l.56-2.243a1 1 0 011.213-.727zM9.03 8l-1 4h2.938l1-4H9.031z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <%= form.text_field :code, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md", placeholder: "e.g. MATH101", required: true %>
                </div>
                <p class="mt-2 text-sm text-gray-500">Unique code to identify this class</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-4 py-5 border-b border-gray-200 bg-gray-50 sm:px-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-indigo-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                Academic Details
              </div>
            </h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
              <div class="sm:col-span-1">
                <label for="class_standard_year" class="block text-sm font-medium text-gray-700">Academic Year</label>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <%= form.number_field :year, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md", placeholder: "e.g. 2024", min: 2000, max: 2100, required: true %>
                </div>
                <p class="mt-2 text-sm text-gray-500">Academic year for this class</p>
              </div>

              <div class="sm:col-span-1">
                <label for="class_standard_section" class="block text-sm font-medium text-gray-700">Section</label>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                  </div>
                  <%= form.text_field :section, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md", placeholder: "e.g. A, B, C (optional)" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">Section identifier (leave blank if not applicable)</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Side Panel -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-4 py-5 border-b border-gray-200 bg-gray-50 sm:px-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-indigo-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
                Class Settings
            </div>
            </h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <div class="space-y-6">
              <!-- Status Toggle -->
              <div>
                <label class="text-base font-medium text-gray-700">Class Status</label>
                <p class="text-sm text-gray-500 mb-4">Set whether this class is active in the system</p>
                
                <div class="relative inline-block w-full">
                  <div class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-900">Active</span>
                    <button type="button" id="toggleBtn" class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 <%= class_standard.active? ? 'bg-indigo-600' : 'bg-gray-200' %>" role="switch" aria-checked="<%= class_standard.active? %>">
                      <span class="sr-only">Use setting</span>
                      <span aria-hidden="true" class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out <%= class_standard.active? ? 'translate-x-5' : 'translate-x-0' %>"></span>
                    </button>
                    <%= form.check_box :active, class: "hidden", id: "activeSwitch" %>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">
                    <% if class_standard.active? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
                          <circle cx="4" cy="4" r="3" />
                        </svg>
                        Active
                      </span>
                      Active classes are visible to teachers and can have attendance marked
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-red-400" fill="currentColor" viewBox="0 0 8 8">
                          <circle cx="4" cy="4" r="3" />
                        </svg>
                        Inactive
                      </span>
                      Inactive classes are hidden from teachers and students
                    <% end %>
                  </p>
                </div>
              </div>
              
              <!-- Class Preview -->
              <div class="border border-gray-200 rounded-md overflow-hidden shadow-inner bg-gray-50">
                <div class="p-4 flex flex-col items-center justify-center text-center">
                  <div class="h-12 w-12 rounded-lg bg-indigo-100 flex items-center justify-center text-indigo-600 mb-3">
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                  </div>
                  
                  <div class="text-sm font-medium text-gray-900 mb-1">
                    <%= class_standard.name.presence || "Class Name" %>
                  </div>
                  <div class="text-xs text-gray-500 mb-2">
                    <%= class_standard.code.presence || "CLASS-CODE" %> 
                    <% if class_standard.section.present? %>
                      | Section <%= class_standard.section %>
                    <% end %>
                  </div>
                  <div class="text-xs bg-gray-200 text-gray-800 rounded-full px-2 py-0.5">
                    <%= class_standard.year.presence || "Year" %>
                  </div>
          </div>
        </div>
            </div>
          </div>
        </div>
      </div>
      </div>

    <div class="pt-6 mt-6 border-t border-gray-200">
      <div class="flex justify-end">
        <%= link_to "Cancel", admin_class_standards_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <%= class_standard.new_record? ? 'Create Class' : 'Update Class' %>
        </button>
      </div>
      </div>
    <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('classStandardForm');
    const toggleBtn = document.getElementById('toggleBtn');
    const activeSwitch = document.getElementById('activeSwitch');
    
    toggleBtn.addEventListener('click', function() {
      activeSwitch.checked = !activeSwitch.checked;
      
      // Update toggle appearance
      if (activeSwitch.checked) {
        toggleBtn.classList.remove('bg-gray-200');
        toggleBtn.classList.add('bg-indigo-600');
        toggleBtn.querySelector('span:not(.sr-only)').classList.remove('translate-x-0');
        toggleBtn.querySelector('span:not(.sr-only)').classList.add('translate-x-5');
      } else {
        toggleBtn.classList.remove('bg-indigo-600');
        toggleBtn.classList.add('bg-gray-200');
        toggleBtn.querySelector('span:not(.sr-only)').classList.remove('translate-x-5');
        toggleBtn.querySelector('span:not(.sr-only)').classList.add('translate-x-0');
      }
    });
    
    form.addEventListener('submit', function(event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
    });
  });
</script>