<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
      <div class="max-w-md mx-auto">
        <div class="flex items-center space-x-5">
          <div class="block pl-2 font-semibold text-xl text-gray-700">
            <h2 class="leading-relaxed">Create New User</h2>
          </div>
        </div>
        
        <%= form_with(model: [:admin, @user], class: "divide-y divide-gray-200") do |f| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 p-4 rounded-md mb-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="py-8 text-base leading-6 space-y-6 text-gray-700 sm:text-lg sm:leading-7">
            <div class="flex flex-col">
              <%= f.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.select :role, @roles, {}, 
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-3 px-4",
                  data: { controller: "user-form", action: "change->user-form#toggleFields" } %>
            </div>

            <div class="flex flex-col hidden" id="teacher-fields">
              <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.email_field :email, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-3 px-4" %>
            </div>

            <div class="flex flex-col hidden" id="student-fields">
              <%= f.label :roll_number, "Roll Number (e.g., HSS801)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :roll_number, 
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-3 px-4",
                  pattern: "^HSS[1-9][0-9]{2}$",
                  title: "Format: HSS followed by standard number (1-9) and roll number (01-99)",
                  placeholder: "HSS801" %>
              <p class="mt-1 text-sm text-gray-500">Format: HSS followed by standard number (1-9) and roll number (01-99)</p>
            </div>

            <div class="flex flex-col" id="name-fields">
              <div class="grid grid-cols-2 gap-6">
                <div>
                  <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_field :first_name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-3 px-4" %>
                </div>
                <div>
                  <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_field :last_name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-3 px-4" %>
                </div>
              </div>
            </div>

            <div class="flex flex-col hidden" id="student-class-fields">
              <%= f.label :class_standard, "Class", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.select :class_standard, @class_standards, { include_blank: "Select a class" },
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-3 px-4" %>
            </div>
          </div>

          <div class="pt-6 flex items-center space-x-4">
            <%= f.submit "Create User", class: "flex justify-center py-3 px-6 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= link_to "Cancel", admin_users_path, class: "flex justify-center py-3 px-6 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const roleSelect = document.querySelector('select[name="user[role]"]');
      const teacherFields = document.getElementById('teacher-fields');
      const studentFields = document.getElementById('student-fields');
      const studentClassFields = document.getElementById('student-class-fields');
      const nameFields = document.getElementById('name-fields');
      // Remove email field for students before submit
      const form = document.querySelector('form');
      form.addEventListener('submit', function(e) {
        if (roleSelect.value === 'student') {
          const emailInput = form.querySelector('input[name="user[email]"]');
          if (emailInput) {
            emailInput.value = '';
          }
        }
      });
      function toggleFields() {
        const role = roleSelect.value;
        // Hide all fields first
        teacherFields.classList.add('hidden');
        studentFields.classList.add('hidden');
        studentClassFields.classList.add('hidden');
        nameFields.classList.add('hidden');
        if (role === 'student') {
          studentFields.classList.remove('hidden');
          studentClassFields.classList.remove('hidden');
          nameFields.classList.remove('hidden');
        } else if (role === 'teacher') {
          teacherFields.classList.remove('hidden');
          nameFields.classList.remove('hidden');
        }
      }
      roleSelect.addEventListener('change', toggleFields);
      toggleFields(); // Initial state
    });
  </script>
<% end %>