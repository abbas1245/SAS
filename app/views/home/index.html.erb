<main class="bg-gray-900 text-white min-h-screen">
    <!-- Hero Section -->
    <section class="relative py-20 px-6 md:px-12 lg:px-24 flex flex-col items-center">
        <!-- Logo SVG -->
        <div class="mb-8 transform hover:scale-105 transition-transform duration-300">
            <svg width="200" height="80" viewBox="0 0 200 80" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" stop-color="#6366F1" />
                        <stop offset="50%" stop-color="#8B5CF6" />
                        <stop offset="100%" stop-color="#A78BFA" />
                    </linearGradient>
                    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
                        <feGaussianBlur stdDeviation="2" result="blur" />
                        <feComposite in="SourceGraphic" in2="blur" operator="over" />
                    </filter>
                </defs>

                <!-- Background Shape -->
                <rect x="20" y="15" width="160" height="50" rx="10" fill="#1F2937" stroke="url(#logoGradient)" stroke-width="2" />

                <!-- Main Logo Text -->
                <text x="100" y="50" dominant-baseline="middle" text-anchor="middle" fill="url(#logoGradient)" font-family="Arial, sans-serif" font-weight="bold" font-size="38" filter="url(#glow)">SAS</text>

                <!-- Decorative Elements -->
                <path d="M40,55 C45,62 55,48 60,55" stroke="url(#logoGradient)" fill="none" stroke-width="2" />
                <path d="M140,55 C145,62 155,48 160,55" stroke="url(#logoGradient)" fill="none" stroke-width="2" />

                <!-- Abstract Check Marks -->
                <path d="M78,38 L88,48 L98,28" stroke="#6366F1" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" opacity="0.7" />
                <path d="M102,38 L112,48 L122,28" stroke="#8B5CF6" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" opacity="0.7" />

                <!-- Tagline -->
                <text x="100" y="70" dominant-baseline="middle" text-anchor="middle" fill="#E5E7EB" font-family="Arial, sans-serif" font-size="10">Student Attendance System</text>
            </svg>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-center bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 to-purple-500">Student Attendance System</h1>
        <p class="text-xl text-gray-300 mb-8 text-center max-w-2xl">Streamline attendance tracking with our powerful, intuitive platform</p>

        <div class="flex flex-col sm:flex-row gap-4 mb-12">
            <button class="px-8 py-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg font-medium transition-colors duration-300">Get Started</button>
            <button class="px-8 py-3 bg-transparent border-2 border-purple-500 hover:bg-purple-500/20 rounded-lg font-medium transition-colors duration-300">Schedule Demo</button>
        </div>

        <!-- Animated Wave -->
        <div class="w-full absolute bottom-0 left-0 overflow-hidden">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-24">
                <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V120H0V56.44Z" fill="#1F2937"></path>
            </svg>
        </div>
    </section>

    <!-- Features Section -->
    <section class="bg-gray-800 py-20 px-6 md:px-12 lg:px-24">
        <h2 class="text-3xl font-bold text-center mb-16">Why Choose <span class="text-indigo-400">SAS</span>?</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <!-- Feature 1 -->
            <div class="bg-gray-900 p-6 rounded-xl border border-gray-700 hover:border-indigo-500 transition-colors duration-300">
                <div class="mb-4">
                    <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="48" height="48" rx="12" fill="#4F46E5" fill-opacity="0.1" />
                        <path d="M24 14V24L30 30" stroke="#6366F1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        <circle cx="24" cy="24" r="12" stroke="#6366F1" stroke-width="2" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">Real-time Tracking</h3>
                <p class="text-gray-400">Monitor attendance as it happens. Get instant updates and notifications when students check in.</p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-gray-900 p-6 rounded-xl border border-gray-700 hover:border-indigo-500 transition-colors duration-300">
                <div class="mb-4">
                    <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="48" height="48" rx="12" fill="#4F46E5" fill-opacity="0.1" />
                        <path d="M16 24H32M16 18H24M16 30H28" stroke="#6366F1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        <rect x="12" y="12" width="24" height="24" rx="4" stroke="#6366F1" stroke-width="2" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">Comprehensive Reports</h3>
                <p class="text-gray-400">Generate detailed attendance reports with custom parameters. Export data in multiple formats.</p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-gray-900 p-6 rounded-xl border border-gray-700 hover:border-indigo-500 transition-colors duration-300">
                <div class="mb-4">
                    <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="48" height="48" rx="12" fill="#4F46E5" fill-opacity="0.1" />
                        <circle cx="24" cy="18" r="6" stroke="#6366F1" stroke-width="2" />
                        <path d="M12 36C12 30.4772 17.3726 26 24 26C30.6274 26 36 30.4772 36 36" stroke="#6366F1" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold mb-2">User Management</h3>
                <p class="text-gray-400">Easily manage students, teachers, and administrators with role-based access control.</p>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-20 px-6 md:px-12 lg:px-24 bg-gradient-to-b from-gray-900 to-gray-800">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl font-bold text-center mb-16">Trusted by Educators</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-center">
                <div class="p-6">
                    <div class="text-4xl font-bold text-indigo-400 mb-2">98%</div>
                    <p class="text-gray-400">Accuracy Rate</p>
                </div>
                <div class="p-6">
                    <div class="text-4xl font-bold text-indigo-400 mb-2">500+</div>
                    <p class="text-gray-400">Schools</p>
                </div>
                <div class="p-6">
                    <div class="text-4xl font-bold text-indigo-400 mb-2">1M+</div>
                    <p class="text-gray-400">Students Tracked</p>
                </div>
                <div class="p-6">
                    <div class="text-4xl font-bold text-indigo-400 mb-2">85%</div>
                    <p class="text-gray-400">Time Saved</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 px-6 md:px-12 lg:px-24 text-center bg-gray-900">
        <div class="max-w-3xl mx-auto">
            <h2 class="text-3xl font-bold mb-6">Ready to Transform Your Attendance Process?</h2>
            <p class="text-xl text-gray-300 mb-8">Join thousands of educational institutions that have simplified their attendance tracking.</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button class="px-8 py-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg font-medium transition-colors duration-300">Start Free Trial</button>
                <button class="px-8 py-3 bg-purple-600 hover:bg-purple-700 rounded-lg font-medium transition-colors duration-300">Contact Sales</button>
            </div>
        </div>
    </section>
</main>